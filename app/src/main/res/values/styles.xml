<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/BaseAppTheme">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>
    <style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/window_background_light</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>
    </style>
    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="AppThemeNoTitle" parent="@style/BaseAppTheme">
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="BaseAppTheme" parent="@android:style/Theme.Holo.Light" />

    <style name="EditTextAppTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>
    <style name="ProfileTheme" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
