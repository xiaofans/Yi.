<xiaofan.yiapp.view.PanningBackgroundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panning_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical"
        android:layout_marginTop="32.0dip"
        android:gravity="center"
        >
        <TextView
            android:textSize="54.0sp"
            android:textColor="@android:color/white"
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="0.0"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@android:color/white"
            android:id="@+id/app_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_words"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="0.0"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:layout_marginTop="10dp"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:id="@+id/social_buttons"
        android:layout_width="240.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32.0dip"
        android:divider="@drawable/social_divider"
        android:showDividers="middle" />

</xiaofan.yiapp.view.PanningBackgroundFrameLayout>
